{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Aigent": {
    "MemoryType": "DocumentDb",
    "Redis": {
      "ConnectionString": "localhost:6379"
    },
    "SQL": {
      "ConnectionString": "Server=localhost;Database=AigentMemory;Trusted_Connection=True;"
    },
    "DocumentDb": {
      "ConnectionString": "mongodb://localhost:27017",
      "DatabaseName": "AigentMemory",
      "CollectionName": "AgentContext"
    },
    "Api": {
      "JwtSecret": "your-super-secret-key-with-at-least-32-characters",
      "JwtIssuer": "aigent-api",
      "JwtAudience": "aigent-clients",
      "JwtExpirationMinutes": 60,
      "AllowedOrigins": [
        "http://localhost:3000",
        "https://aigent.example.com"
      ],
      "RateLimits": {
        "Default": 100,
        "/api/v1/agents": 50,
        "/api/v1/agents/*/actions": 20,
        "/api/v1/workflows/execute": 10
      }
    },
    "SafetySettings": {
      "ContentFilterEnabled": true,
      "ProhibitedTerms": [
        "harmful",
        "dangerous",
        "illegal"
      ],
      "EthicalGuidelines": [
        "Be helpful",
        "Be honest",
        "Be harmless"
      ],
      "RestrictedActionTypes": [
        "DeleteFile",
        "ModifySystemSettings"
      ]
    }
  }
}
